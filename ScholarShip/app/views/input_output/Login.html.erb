<html>
	<head>
		<% content_for:stylesheets do %>
  			<%= stylesheet_link_tag "login.css" %>
  		<%end%>
	</head>
	<header class="navbar navbar-fixed-top navbar-inverse">
			<div class="jumbotron">
				<div class="container fluid text-center">
					<h1> Hi. </h1>
				</div>
			</div>
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand">ScholarShip</a>
			</div>
		
			<nav>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "About Us",'/aboutus', :method => :get %> </li> 
					<li><%= link_to "Contact Us",'/contactus', :method => :get %> </li> 
					<li><%= link_to "Home", '/Home', :method => :get  %></li>
					<li><%= link_to "Sign Up", '/SignUp', :method => :get %></li>
				</ul>
			</nav>
		</div>
	</header>
	<body>
		<div class="container-fluid">
			
			<div class="col-sm-offset-4 text-left">
				<div id="login">
					<%= form_for @cust do |f| %>
						<%= f.label :email,"Email:" %>
						<%= f.email_field :email %>
						<%= f.label :password,"Password:"%>
						<%= f.password_field :password %>
						<%= f.submit "Log In", class: "btn btn-primary" %> 
					<% end %>
				</div>
			</div>
		</div>
	</body>
	<footer class="container-fluid text-right">
			<p>Copyright &copy; The ScholarShip </p>
	</footer>
</html>

